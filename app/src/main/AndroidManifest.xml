<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.choryan.opengglpacket">

    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpengGLPacket">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".activity.PureBackgroundActivity" />
        <activity android:name=".activity.PointLineTriangleActivity" />
        <activity
            android:name=".activity.DrawTextActivity"
            android:hardwareAccelerated="true" />
        <activity android:name=".activity.DrawCircleActivity" />
        <activity android:name=".activity.DrawRectangleActivity" />
        <activity android:name=".activity.DrawBitmapActivity" />
        <activity android:name=".activity.DrawCircularConeActivity" />
        <activity android:name=".activity.DrawBitmapSobelActivity" />
        <activity android:name=".activity.DrawBitmapLaplaceActivity" />
        <activity android:name=".activity.DrawTextSobelActivity" />
        <activity android:name=".activity.DrawTextLaplaceActivity" />
        <activity android:name=".activity.DrawBitmapFilterActivity" />
    </application>

</manifest>